<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="bkoruznjak.from.hr.musae.views.MainActivity">

        <Button
            android:id="@+id/btn_scan_folders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scan folder structure" />

        <Button
            android:id="@+id/btn_start_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_scan_folders"
            android:text="run radio" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/btn_start_player" />

    </RelativeLayout>
</layout>